    int         m_$(name)Period;
    int         m_$(name)ErrorCount;
    int         m_$(name)ErrorThreshold;
.endfor
    pb::Container m_rx;  // more efficient to reuse a protobuf Message
    pb::Container m_tx;  // more efficient to reuse a protobuf Message

    void start();
